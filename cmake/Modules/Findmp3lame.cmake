FIND_PATH(MP3LAME_INCLUDE_DIR lame/lame.h)
FIND_LIBRARY(MP3LAME_LIBRARIES NAMES mp3lame)

IF(MP3LAME_INCLUDE_DIR AND MP3LAME_LIBRARIES)
	SET(LAME_FOUND TRUE)
ENDIF(MP3LAME_INCLUDE_DIR AND MP3LAME_LIBRARIES)

IF(LAME_FOUND)
	IF (NOT Lame_FIND_QUIETLY)
		MESSAGE(STATUS "Found lame includes:	${MP3LAME_INCLUDE_DIR}/lame/lame.h")
		MESSAGE(STATUS "Found lame library: ${MP3LAME_LIBRARIES}")
	ENDIF (NOT Lame_FIND_QUIETLY)
ELSE(LAME_FOUND)
	IF (Lame_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could NOT find lame development files")
	ENDIF (Lame_FIND_REQUIRED)
ENDIF(LAME_FOUND)